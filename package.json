{
  "name": "tasknagger2",
  "version": "0.1.0",
  "repository": "",
  "description": "Desktop tasks applications",
  "main": "main.js",
  "scripts": {
    "dev": "./node_modules/.bin/electron --debug=5858 ./app",
    "clean": "rm -rf ./dist",
    "clean:win": "rm -rf ./dist/win",
    "clean:osx": "rm -rf ./dist/osx",
    "build": "npm run clean && npm run build:osx && npm run build:win",
    "build:win": "npm run clean:win && electron-packager ./app \"WhatsApp\" --out=dist/win --platform=win32 --arch=x64 --version=0.34.1 --icon=assets/win/tasknagger.ico",
    "build:osx": "npm run clean:osx && electron-packager ./app \"WhatsApp\" --out=dist/osx --platform=darwin --arch=x64 --version=0.34.1 --icon=assets/osx/tasknagger.icns"
  },
  "devDependencies": {
    "electron-packager": "^5.1.0",
    "electron-prebuilt": "^0.36.7"
  }
}
